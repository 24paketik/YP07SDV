<Page x:Class="Wpf.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Content="Услуги" Name="btnService" Style="{StaticResource mainBtm}"/>
                <Button Content="Клиенты" Name="btnClient" Style="{StaticResource mainBtm}"/>
                <Button Content="Товары" Name="btnProduct" Style="{StaticResource mainBtm}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="Добавить товар" Name="btnAddProduct" Style="{StaticResource mainBtm}"/>
                <Button Content="Сотрудники" Name="btnStuff" Style="{StaticResource mainBtm}"/>
                <Button Content="Компания" Name="btnCompany" Style="{StaticResource mainBtm}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
